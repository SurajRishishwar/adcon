         <div class="container d-flex justify-content-center bg-white">
            <div class="card p-3 py-4 mt-6">
                <div class="text-center"> 
                    <div class="col-4 mx-auto my-3">
                        <% if(profile.avatar) { %>
                            <img  id="pp" class="img-fluid text-center rounded-circle" width="400px !important;"  src="<%=user.avatar%>" alt="Calling"/>
                        <% } else { %>
                            <img class="rounded-circle" src="https://i.imgur.com/stD0Q19.jpg" width="100">
                        <% } %>  
                    </div>
                    <h3 class="mt-2 text-black"><%=profile.name %></h3> <span class="mt-1 clearfix text-black"><%=profile.email %></span>
                     <h4><span class="mt-1 clearfix text-black"><%=profile.phone%></span></h4>
                    
                    <hr class="line"> <small class="mt-4 text-black"><%=profile.bio %></small>
                    <div class="profile mt-5 "> <button class="profile_button px-5 "><a href="/user/update">Update Profile</a></button> </div>
                </div>
            </div>
